<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Destination</h1>
  <div class="col-6 offset-3">
    <form action="/destinations/<%=destination._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="destination[title]"
          value="<%=destination.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="destination[location]"
          value="<%=destination.location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="destination[image]"
          value="<%=destination.image %>"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="destination[description]"
        >
<%= destination.description%></textarea
        >
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update destination</button>
      </div>
    </form>
    <a href="/destinations/<%= destination._id%>">Back To destination</a>
  </div>
</div>
